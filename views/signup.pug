doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(http-equiv='X-UA-Compatible' content='IE=edge')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title= title
    link(rel='stylesheet' href='css/style.css')
  body
    
    div(class="form_container")
      h1.page_title Sign Up
      form(id="signup_form", action="/signup", method="post")
        div.form_error= form_error
        label
          span Username
          input#username(type="text", name="username", placeholder="Username", value= usernameValue)
        label
          span Password
          input#password(type="password", name="password", placeholder="Password")
        label
          span Re Enter Password
          input#repassword(type="password", name="repassword", placeholder="Re Enter Password")
        label
          button(type="submit", id="signup_btn") SignUp
          a(href='/signin') already have an account?

    script(src="js/script.js") 
